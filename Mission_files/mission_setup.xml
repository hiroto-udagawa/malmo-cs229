<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <About>
    <Summary>Zombie Fighting Mission</Summary>
  </About>

  <ServerSection>
    <ServerInitialConditions>
        <Time><StartTime>1</StartTime></Time>
    </ServerInitialConditions>
    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,220*1,5*3,2;3;,biome_1"/>
      <DrawingDecorator>
        <!-- coordinates for cuboid are inclusive -->
        <DrawCuboid x1="-15" y1="47" z1="-15" x2="15" y2="70" z2="15" type="air" />            <!-- limits of our arena -->
        <DrawCuboid x1="-15" y1="52" z1="-15" x2="15" y2="52" z2="15" type="lava" />           <!-- lava floor -->
        <DrawCuboid x1="-15" y1="51" z1="-15" x2="15" y2="51" z2="15" type="glass" />           <!-- lava floor -->
				
        <DrawCuboid x1="-15" y1="46" z1="-15" x2="15" y2="46" z2="15" type="cobblestone" />           <!-- lava floor -->
        <DrawBlock x="-10" y="46" z="12" type="mob_spawner" variant="Zombie"/>          <!-- lava floor -->
        <DrawBlock x="0" y="46" z="12" type="mob_spawner" variant="Zombie"/>          <!-- lava floor -->
        <DrawBlock x="10" y="46" z="12" type="mob_spawner" variant="Zombie"/>          <!-- lava floor -->
				
      </DrawingDecorator>
      <ServerQuitFromTimeUp timeLimitMs="50000"/>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>Cristina</Name>
    <AgentStart>
      <Placement x="0" y="47.0" z="-12" pitch="20" yaw="0"/>
    </AgentStart>
    <AgentHandlers>
      <ContinuousMovementCommands turnSpeedDegs="360"/>
      <ObservationFromFullStats/>
      <RewardForTouchingBlockType>
        <Block reward="-100.0" type="lava" behaviour="onceOnly"/>
        <Block reward="100.0" type="lapis_block" behaviour="onceOnly"/>
      </RewardForTouchingBlockType>
      <RewardForSendingCommand reward="-1" />
      <AgentQuitFromTouchingBlockType>
          <Block type="lava" />
          <Block type="lapis_block" />
      </AgentQuitFromTouchingBlockType>
    </AgentHandlers>
  </AgentSection>

</Mission>
