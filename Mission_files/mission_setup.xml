
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<About>
		<Summary>Zombie Fighting Mission</Summary>
	</About>

	<ServerSection>
		<ServerInitialConditions>
			<Weather>clear</Weather>
      <Time>
          <StartTime>13500</StartTime>
          <AllowPassageOfTime>false</AllowPassageOfTime>
      </Time>
		</ServerInitialConditions>
		<ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,220*1,5*3,2;3;dungeon" />
			<DrawingDecorator>
        <DrawCuboid x1="-15" y1="206" z1="-15" x2="15" y2="226" z2="15" type="stone"/>
        <DrawCuboid x1="-14" y1="207" z1="-14" x2="14" y2="226" z2="14" type="air"/>								
				<DrawLine x1="-3" y1="206" z1="-2" x2="3" y2="206" z2="-2" type="mob_spawner" variant="Zombie"/>  
				
			</DrawingDecorator>
			<ServerQuitFromTimeUp timeLimitMs="100000"/>
			<ServerQuitWhenAnyAgentFinishes/>
		</ServerHandlers>
	</ServerSection>

	<AgentSection mode="Survival">
		<Name>Cristina</Name>
		<AgentStart>
      <Placement x="0" y="207.5" z="-14" pitch="20" yaw="0"/>
			<Inventory>
				<InventoryItem slot="0" type="iron_sword"/>
			</Inventory>
		</AgentStart>
		<AgentHandlers>
      <VideoProducer want_depth="false">
          <Width>640</Width>
          <Height>480</Height>
      </VideoProducer>
			<ContinuousMovementCommands />
			<ObservationFromFullStats/>
			<RewardForSendingCommand reward="-1" />
		</AgentHandlers>
	</AgentSection>
</Mission>
